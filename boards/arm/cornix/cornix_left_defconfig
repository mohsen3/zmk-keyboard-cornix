# e73 config end

CONFIG_ZMK_USB=n
CONFIG_ZMK_BLE=y
CONFIG_ZMK_SPLIT=y

# Increase BLE transmit power to resolve latency and split communication issues
CONFIG_BT_CTLR_TX_PWR_PLUS_8=y

# Disable 2Mbps PHY for better compatibility
CONFIG_BT_CTLR_PHY_2M=n

# Optimized connection intervals for signal reliability
# Settings tuned to handle physical signal blockage (e.g., body between keyboard halves)
# Higher latency and timeout provide tolerance for brief signal interruptions
CONFIG_BT_PERIPHERAL_PREF_MIN_INT=6
CONFIG_BT_PERIPHERAL_PREF_MAX_INT=12
CONFIG_BT_PERIPHERAL_PREF_LATENCY=30
CONFIG_BT_PERIPHERAL_PREF_TIMEOUT=500

# Split-specific BLE parameters for peripheral-to-central connection
# These settings improve stability when signal is obstructed
CONFIG_ZMK_SPLIT_BLE_PREF_INT=6
CONFIG_ZMK_SPLIT_BLE_PREF_LATENCY=30
CONFIG_ZMK_SPLIT_BLE_PREF_TIMEOUT=500

# Change keyboard default display name

# Battery level report interval in seconds
CONFIG_ZMK_BATTERY_REPORT_INTERVAL=300

CONFIG_PINCTRL=y

# RGB
CONFIG_SPI=n

# enable display drivers
CONFIG_ZMK_DISPLAY=n

#BLE-passkey
CONFIG_ZMK_BLE_PASSKEY_ENTRY=n

#BLE-clean
CONFIG_ZMK_BLE_CLEAR_BONDS_ON_START=n

# Disable NKRO - causes compatibility issues with some systems
# Use standard 6KRO (6-Key Rollover) for better compatibility
CONFIG_ZMK_HID_REPORT_TYPE_NKRO=n

CONFIG_ZMK_POINTING=y

CONFIG_INPUT=y

CONFIG_EC11=y
CONFIG_EC11_TRIGGER_GLOBAL_THREAD=y

# 3 profiles for better memory efficiency
CONFIG_BT_MAX_CONN=3
CONFIG_BT_MAX_PAIRED=3

# ZMK Studio related configuration
CONFIG_ZMK_STUDIO=y
CONFIG_ZMK_STUDIO_LOCKING=n
CONFIG_ZMK_STUDIO_LOCK_ON_DISCONNECT=n

# Performance optimizations for reduced latency
# Eager debouncing for faster key press detection
CONFIG_ZMK_KSCAN_DEBOUNCE_PRESS_MS=2
CONFIG_ZMK_KSCAN_DEBOUNCE_RELEASE_MS=5

# Faster BLE queue processing
CONFIG_BT_BUF_EVT_RX_COUNT=16
CONFIG_BT_BUF_ACL_RX_SIZE=251
CONFIG_BT_BUF_ACL_TX_SIZE=251

# Optimize system work queue for faster HID processing
CONFIG_SYSTEM_WORKQUEUE_PRIORITY=-2

# Reduce USB polling interval (if USB is ever enabled)
CONFIG_USB_HID_POLL_INTERVAL_MS=1

# Enable deep sleep after 30 minutes of inactivity for power savings
CONFIG_ZMK_SLEEP=y
CONFIG_ZMK_IDLE_SLEEP_TIMEOUT=1800000

