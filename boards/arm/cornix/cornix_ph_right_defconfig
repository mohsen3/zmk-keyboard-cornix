# e73 config end

# Peripheral mode - no USB, BLE only
CONFIG_ZMK_USB=n
CONFIG_ZMK_BLE=y
CONFIG_ZMK_SPLIT=y
# Note: CENTRAL role is set to 'n' in Kconfig.defconfig

# Increase BLE transmit power for better range with dongle
CONFIG_BT_CTLR_TX_PWR_PLUS_8=y

# Disable ZMK Studio for peripherals
CONFIG_ZMK_STUDIO=n

CONFIG_INPUT=y

# RGB
CONFIG_SPI=n

CONFIG_ZMK_EXT_POWER=n

CONFIG_EC11=y
CONFIG_EC11_TRIGGER_GLOBAL_THREAD=y

# Battery level report interval in seconds
CONFIG_ZMK_BATTERY_REPORT_INTERVAL=300

# Disable deep sleep for peripheral
CONFIG_ZMK_SLEEP=n

